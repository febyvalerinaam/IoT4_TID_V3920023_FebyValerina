from gpio import *
from time import *

def handleSensorData ():
	value = digitalRead(0)
	if value == 0:
		customWrite(2, '0')
		customWrite(1, '0')
		digitalWrite(1, LOW)
		print("Tidak ada gerakan")
	else:
		customWrite(2, '1')
		customWrite(1, '1')
		digitalWrite(1, HIGH)
		print("Ada gerakan")
		print("Garansi Terbuka")
		print("Lampu Menyala")

def main():
	ass_event_detect(0, handleSensorData)

	while True:
		delay(1000)

if __name__ == "__main__":
	main()
